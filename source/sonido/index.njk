---
layout: 'base.njk'
---

<h2 class="skew">
  Sonidossss
</h2>
<nav class="navigation">
  {% for tanda in sonidos %}
    <a 
      class="button-skew" 
      href="#{{ tanda.titulo | slug }}"
    >
      {{ tanda.titulo }}
    </a>
  {% endfor %}
</nav>
{% for tanda in sonidos %}
<h3 class="skew" id="{{ tanda.titulo | slug }}">
  {{ tanda.titulo }}
</h3>
<div class="stack skew-children">
  {% for track in tanda.tracks %}
    <article class="sonido">
      <div class="content">
        <header>
          <h4>{{ track.nombre }}</h4>
          <p>{{ track.fecha }}</p>
        </header>
        <audio 
          class="base" 
          src="/_resources/sonidos/{{ track.archivo }}"
          preload="metadata"
          controls 
        >
      </div>
      <img 
        class="imagen left" 
        src="/_resources/imagenes/{{ track.imagen }}" 
        width="350" height="350" 
        load="lazy"
        alt="" 
      >
      </audio>
    </article>    
  {% endfor %}
</div>
{% endfor %}