---
layout: 'base.njk'
---

<h2 class="skew">
  Sonidossss
</h2>
<nav class="navigation">
  {% for tanda in sonidos %}
    <a 
      class="button-skew" 
      href="#{{ tanda.titulo | slug }}"
    >
      {{ tanda.titulo }}
    </a>
  {% endfor %}
</nav>
{% for tanda in sonidos %}
<h3 class="skew" id="{{ tanda.titulo | slug }}">
  {{ tanda.titulo }}
</h3>
<div class="grid-2">
  <img class="imagen left" src="/_resources/imagenes/{{ tanda.imagen }}" width="350" height="350" alt="" load="lazy">
  {% for track in tanda.tracks %}
    <article class="sonido right">
      <header>
        <h4>{{ track.nombre }}</h4>
        <p>{{ track.fecha }}</p>
      </header>
      <audio 
        class="base" 
        src="/_resources/sonidos/{{ track.archivo }}"
        preload="metadata"
        controls 
      >
      </audio>
    </article>    
  {% endfor %}
</div>
{% endfor %}